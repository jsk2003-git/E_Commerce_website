<% layout("layouts/boilerplate") %>
    <%- include("../partials/navbar") %>

        <div class="row">
            <div class="col-6 mx-auto">

                <form action="/products/<%= foundProduct._id %>?_method=PATCH" method="POST">
                    <div>
                        <label for="name"> Name:</label>
                        <input class="form-control mb-3" type="text" name="name" id="name"
                            placeholder="Enter name of product" value="<%=foundProduct.name%>">
                    </div>

                    <div>
                        <label for="img"> Image:</label>
                        <input class="form-control mb-3" type="text" name="img" id="img" placeholder="Enter image" value="<%=foundProduct.img %>">
                    </div>

                    <div>
                        <label for="price"> Price:</label>
                        <input class="form-control mb-3" type="number" name="price" id="price" placeholder="Enter price" value="<%=foundProduct.price%>">
                    </div>

                    <div>
                        <label for="desc"> Description</label>
                        <textarea class="form-control mb-3" name="desc" id="desc" id="desc" rows="5"
                            placeholder="Description of product" > <%=foundProduct.desc %></textarea>
                    </div>


                    <button class="btn btn-sm btn-success" type="submit">Edit product</button>
                </form>
            </div>
        </div>